@{
    ViewData["Title"] = "Book List";
}

@model Mission11_Trommlitz.Models.BookListViewModel

<h2>@ViewData["Title"]</h2>

@foreach (var book in Model.Books)
{
    <div class="card mb-3">
        <h5 class="card-header">@book.Title</h5>
        <div class="card-body">
            <h5 class="card-title">@book.Author</h5>
            <p class="card-text">
                Publisher: @book.Publisher<br />
                ISBN: @book.Isbn<br />
                Classification/Category: @book.Classification<br />
                Number of Pages: @book.PageCount<br />
                <strong>Price: @book.Price.ToString("c")</strong>
            </p>
        </div>
    </div>
}

<!-- Pagination controls centered at the bottom -->
<div class="d-flex justify-content-center my-4">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
