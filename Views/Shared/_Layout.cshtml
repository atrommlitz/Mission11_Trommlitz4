<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Mission11_Trommlitz</title>
    <!-- Update the Bootstrap CSS link to match your project structure -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Mission11_Trommlitz.css" asp-append-version="true"/>
</head>
<body>
<!-- Bootstrap header from listing 7.37 -->
<div class="bg-dark text-white p-2">
    <span class="navbar-brand ml-2">Book List</span>
</div>

<!-- Bootstrap container from listing 7.37 -->
<div class="container-fluid">
    <div class="row m-1 p-1">
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2024 - Mission11_Trommlitz 
    </div>
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>